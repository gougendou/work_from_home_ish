<div class="container-fluid d-flex justify-content-center">

  <div class="col-sm-7">
    <div class="row">
      <% @workspaces.each do |workspace| %>
        <div class="col-xs-12 col-sm-6">
          <%= link_to workspace_path(workspace) do %>
            <div class="cardContainer">
              <div class="card-image"
                  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://cdn.autonomous.ai/static/upload/images/common/upload/20210918/10-Gaming-Desk-Setup-Hacks-for-Every-Gamer_55ff4d6937e.jpg', width: 400,height: 300, crop: :thumb %>')">
                <div class="card-first-name"><p><%= "Matt" %></p></div>
                <%# <%= width: 50, height: 50, crop: :thumb, gravity: :face, class: "card-user avatar" %>
              </div> <!-- fin card-image -->
              <div class="card">
                <div class="card-description">
                  <p><strong id="city"><%= workspace.description %></strong></p>
                  <p><%= workspace.name %></p>
                </div>
                <div class="card-price">
                  <h2> <%= workspace.price %> â‚¬</h2>
                </div> <!-- fin card-price -->
              </div> <!-- fin card -->
            </div> <!-- fin cardContainer -->
          <% end %>
        </div> <!-- fin de col -->
      <% end %>
    </div>  <!-- fin du row -->
  </div> <!-- fin du col-sm-8 -->

  <div class="col-sm-5" >
    <div class="workspaces-map-wrapper">
      <div id="workspaces-map" style="width: 100%; height: 400px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://cdn.londonandpartners.com/visit/general-london/discover/67820-640x360-interactive-map-640.jpg')"></div>
    </div>
  </div>
</div>
