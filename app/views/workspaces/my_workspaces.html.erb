<div class="container mt-3">
  <div class="row">
    <div class="col-12 bold">
      <h1><strong>My workspaces</strong></h1>

    </div>
  </div>
  <div class="row">
    <% @workspaces.each do |workspace| %>
      <div class="col-md-4">
            <a class="plain-link" href="<%= workspace_path(workspace) %>">
              <div class="flat-card">
                <% if workspace.photos.attached? %>
                  <div class="flat-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path workspace.photos[0].key, crop: :fill %>')"></div>
                <% else %>
                  <div class="flat-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1542315192-1f61a1792f33?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')"></div>
                <% end %>
                <div class="flat-card-content" style="overflow: hidden; height: 150px;">
                  <div class="booking-workspace-title">
                    <h4><%= workspace.name %></h4>
                  </div>
                  <div class="flex-align booking-medium-text">
                    <p><%= workspace.address %></p>
                  </div>
                  <div class="flex-align">
                    <div class="align-items booking-small-text bold">
                      <span>Â£<%= workspace.price%>0 / day</span>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
    <% end %>
  </div>
</div>
